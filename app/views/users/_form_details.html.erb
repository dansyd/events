<%= form_for(@current_user, :html => {:multipart => true}) do |f| %>

  <div class="form-group">
    <%= f.label :dob, "Date of birth" %>
    <%= f.date_select :dob, :order => [:day, :month, :year], :start_year => 1950, :end_year => 2000, :include_blank => true, :default => nil %>
  </div>

  <div class="form-group">
    <%= label_tag :sex, "Gender" %>
    <%= f.radio_button :sex, "M" %>
    <%= f.label :sex, "Male" %>
    <%= f.radio_button:sex, "F" %>
    <%= f.label :sex, "Female" %>
  </div>

  <div class="form-group">
    <% if @current_user.avatar.present? %>
      <div class="avatar" style="background-image: url('<%= cloudinary_url @current_user.avatar %>');">
      </div>
      <%= f.label :avatar, 'Choose a new image' %>
    <% else %>
      <%= f.label :avatar %>
    <% end %>
    <div class="upload-container">
      <%= f.cl_image_upload :avatar, :class => 'form-control' %>
    </div>

  </div>

  <div class="form-group">
    <%= f.submit "Update your profile" %>
  </div>

<% end %>
