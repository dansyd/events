<h1>Your profile</h1>

<% unless @current_user.dob.present? || @current_user.sex.present? %>
  <%= render :partial => 'form_details' %>
<% end %>

<% if @current_user.avatar.present? %>
  <!-- <%= cl_image_tag @current_user.avatar, :width => 100, :height => 100, :crop => :fill, :radius => :max, :class => 'avatar' %> -->
  <div class="avatar" style="background-image: url('<%= cloudinary_url @current_user.avatar %>');"></div>
<% end %>

<% if @current_user.attending_events.present? %>
  <h2>Events you are attending</h2>
  <% @current_user.attending_events.each do |event| %>
    <ul>
      <li>
        <%= link_to event.name, event_path(event.id) %>
        <%= render :partial => 'attending_status', :locals => { :event => event } %>
      </li>
    </ul>
  <% end %>
<% end %>

<% if @current_user.events.present? %>
  <h2>Events you created</h2>
  <% @current_user.events.each do |event| %>
    <ul>
      <li><%= link_to event.name, event_path(event.id) %>
        <%= button_to "Delete event", event_path(event.id), :method => 'delete', :data => { :confirm => "Are you sure?" } %>
        <%= link_to "Edit event", edit_event_path(event.id) %></li>
    </ul>
  <% end %>
<% end %>

<%= link_to "Create new event", new_event_path %>
