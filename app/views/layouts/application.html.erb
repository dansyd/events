<!DOCTYPE html>
<html>
<head>
  <title>meetUthere</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://unpkg.com/flatpickr/dist/flatpickr.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://unpkg.com/flatpickr"></script>
  <%= cloudinary_js_config %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<header>
  <nav>
    <%= link_to 'Home', root_path %>
    <% if @current_user.present? %>
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="profile-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <div class="avatar-thumb" style="background-image: url('<%= cloudinary_url @current_user.avatar %>');"></div>
          <span><%= @current_user.email %></span>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="profile_dropdown">
          <li><%= link_to 'Edit your details', user_edit_path %></li>
          <li><%= link_to 'Profile', profile_path %></li>
          <li><%= link_to 'Sign Out', login_path, :method => 'delete' %></li>
        </ul>
      </div>
    <% else %>
      <%= link_to "Sign Up", new_user_path %>
      <%= link_to "Sign In", login_path %>
    <% end %>




    </div>
  </nav>
</header>

<%= yield %>

</body>
</html>
